@{
    ViewBag.Title = "CreateOrUpdateArticle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model CMS.Models.Article

@if (Model.Id == -1)
{
    <h1 class="page-header">Thêm mới bài viết</h1>
}
else
{
    <h1 class="page-header">Cập nhật bài viết</h1>
}
@using (Html.BeginForm("CreateOrUpdateArticle", "Admin", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label" for="subjectID">Chủ đề</label>
        <br />
        @Html.DropDownList("SubjectId")
    </div>
    <div class="form-group">
        <label class="control-label" for="subjectID">Tiêu đề</label>
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Tiêu đề bài viết" })
    </div>
    <div class="form-group">
        <label class="control-label" for="subjectID">Nội dung</label>
        @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @if (Model.Id == -1)
        {
            <button id="add" type="submit" class="btn btn-default">Thêm mới</button>
        }
        else
        {
            <button id="edit" type="submit" class="btn btn-default">Cập nhật</button>
        }
    </div>
}


